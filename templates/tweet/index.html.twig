{% extends 'base.html.twig' %} {% block title %}Hello TweetController!{%
endblock %} {% block body %}

<div class="container">
	<h1>Tous les derniers Tweets</h1>
	{{ form(form) }}

	{% for tweet in tweets|sort((a,b) => b.createdAt <=> a.createdAt) %}

	<h3>{{ tweet.author }}</h3>
	<p>{{ tweet.content }}</p>
	<p>{{ tweet.createdAt | date("%d") }}</p>

	{% endfor %}
</div>

{% endblock %}
